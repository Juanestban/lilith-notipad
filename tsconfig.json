{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@lilith/*": ["./*"],
      "@lilith/components": ["./components"],
      "@lilith/config/*": ["./config/*"],
      "@lilith/contexts": ["./contexts"],
      "@lilith/hooks": ["./hooks"],
      "@lilith/interfaces": ["./interfaces"],
      "@lilith/models": ["./models"],
      "@lilith/styles/*": ["./styles/*"],
      "@lilith/utils/*": ["./utils/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "exclude": ["node_modules"]
}
