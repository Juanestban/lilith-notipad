{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@lilith/*": ["./*"],
      "@lilith/components": ["./components"],
      "@lilith/config/*": ["./config/*"],
      "@lilith/contexts": ["./contexts"],
      "@lilith/hooks": ["./hooks"],
      "@lilith/interfaces": ["./interfaces"],
      "@lilith/middlewares/*": ["./middlewares/*"],
      "@lilith/models": ["./models"],
      "@lilith/utils/*": ["./utils/*"],
      "@lilith/libs/*": ["./libs/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
